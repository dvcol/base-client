{
  "name": "@dvcol/base-http-client",
  "type": "module",
  "version": "1.7.0",
  "packageManager": "pnpm@9.3.0",
  "description": "A simple http client wrapper for making requests",
  "homepage": "https://github.com/dvcol/base-http-client",
  "bugs": "https://github.com/dvcol/base-http-client/issues",
  "keywords": [
    "typescript",
    "library",
    "fetch",
    "http",
    "base-http-client"
  ],
  "license": "MIT",
  "author": "dvcol",
  "repository": {
    "type": "git",
    "url": "https://github.com/dvcol/base-http-client.git"
  },
  "engines": {
    "node": ">=20",
    "pnpm": ">= 8"
  },
  "require": "./dist/client/base-client.cjs",
  "import": "./dist/client/base-client.js",
  "types": "./dist/client/base-client.d.ts",
  "exports": {
    ".": {
      "require": "./dist/client/base-client.cjs",
      "import": "./dist/client/base-client.js",
      "types": "./dist/client/base-client.d.ts"
    },
    "./utils/regex": {
      "require": "./dist/utils/regex/regex.utils.cjs",
      "import": "./dist/utils/regex/regex.utils.js",
      "types": "./dist/utils/regex/regex.utils.d.ts"
    },
    "./utils/test": {
      "require": "./dist/utils/test/test.utils.cjs",
      "import": "./dist/utils/test/test.utils.js",
      "types": "./dist/utils/test/test.utils.d.ts"
    }
  },
  "files": [
    "*.md",
    "LICENSE",
    "dist"
  ],
  "scripts": {
    "prepare": "husky install",
    "build": "tsup",
    "watch": "npm run build -- --watch lib",
    "lint": "eslint lib",
    "lint:fix": "eslint lib --fix",
    "test:unit": "vitest --run --coverage",
    "test:watch": "vitest",
    "release": "standard-version",
    "release:changelog": "extract-changelog-release > RELEASE.md"
  },
  "publishConfig": {
    "access": "public"
  },
  "dependencies": {
    "@dvcol/common-utils": "^1.2.2"
  },
  "devDependencies": {
    "@commitlint/cli": "^19.3.0",
    "@commitlint/config-conventional": "^19.2.2",
    "@dvcol/eslint-plugin-presets": "^1.3.10",
    "@typescript-eslint/eslint-plugin": "^7.0.0",
    "@typescript-eslint/parser": "^7.0.0",
    "@vitest/coverage-v8": "^1.6.0",
    "eslint": "^8.57.0",
    "eslint-config-airbnb-base": "^15.0.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-eslint-comments": "^3.2.0",
    "eslint-plugin-import": "^2.29.1",
    "eslint-plugin-jsonc": "^2.15.1",
    "eslint-plugin-markdown": "^3.0.1",
    "eslint-plugin-prettier": "^5.1.3",
    "eslint-plugin-vitest": "^0.4.0",
    "eslint-plugin-yml": "^1.14.0",
    "extract-changelog-release": "^1.0.2",
    "husky": "^9.0.11",
    "jsonc-eslint-parser": "^2.4.0",
    "prettier": "^3.2.5",
    "standard-version": "^9.5.0",
    "tsup": "^8.0.2",
    "typescript": "^5.4.5",
    "vitest": "^1.6.0"
  }
}
